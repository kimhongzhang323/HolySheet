{
    "info": {
        "_postman_id": "minds-activity-hub-collection",
        "name": "MINDS Activity Hub (FastAPI)",
        "description": "Collection for testing MINDS Activity Hub API endpoints on the new Python FastAPI backend.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Signup (Create Account)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"phoneNumber\": \"+6591234567\",\n    \"address\": {\n        \"street\": \"123 Serangoon Road\",\n        \"unit\": \"#10-01\",\n        \"postalCode\": \"123456\",\n        \"city\": \"Singapore\",\n        \"country\": \"Singapore\"\n    }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/signup",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "signup"
                            ]
                        },
                        "description": "Register a new user account. Returns user ID."
                    },
                    "response": []
                },
                {
                    "name": "Verify OTP",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/auth/verify?email=test@example.com&otp=REPLACE_WITH_OTP",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "verify"
                            ],
                            "query": [
                                {
                                    "key": "email",
                                    "value": "test@example.com"
                                },
                                {
                                    "key": "otp",
                                    "value": "REPLACE_WITH_OTP"
                                }
                            ]
                        },
                        "description": "Verify the OTP sent to email console log."
                    },
                    "response": []
                },
                {
                    "name": "Login (Get Token)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.access_token) {",
                                    "    pm.collectionVariables.set(\"token\", jsonData.access_token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "urlencoded",
                            "urlencoded": [
                                {
                                    "key": "username",
                                    "value": "test@example.com",
                                    "type": "text"
                                },
                                {
                                    "key": "password",
                                    "value": "password123",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/token",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "token"
                            ]
                        },
                        "description": "OAuth2 Password Flow. Automatically saves 'token' to collection variables."
                    },
                    "response": []
                },
                {
                    "name": "Google Login (Backend Swap)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.access_token) {",
                                    "    pm.collectionVariables.set(\"token\", jsonData.access_token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"token\": \"PASTE_GOOGLE_ID_TOKEN_HERE\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/google",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "google"
                            ]
                        },
                        "description": "Exchange Google ID Token for Backend JWT."
                    },
                    "response": []
                }
            ]
        },
